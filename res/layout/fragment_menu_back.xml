<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_shadow"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_menu_user" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="quanturium@gmail.com"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@android:drawable/ic_input_add" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Upload a file"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@android:drawable/ic_input_add" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Show all"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:weightSum="4" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@color/menu_icon_background"
                    android:padding="10dp"
                    android:src="@drawable/ic_itemtype_image" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@color/menu_icon_background"
                    android:padding="10dp"
                    android:src="@drawable/ic_itemtype_bookmark" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@color/menu_icon_background"
                    android:padding="10dp"
                    android:src="@drawable/ic_itemtype_text" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@color/menu_icon_background"
                    android:padding="10dp"
                    android:src="@drawable/ic_itemtype_archive" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:weightSum="4" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@color/menu_icon_background"
                    android:padding="10dp"
                    android:src="@drawable/ic_itemtype_audio" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@color/menu_icon_background"
                    android:padding="10dp"
                    android:src="@drawable/ic_itemtype_video" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@color/menu_icon_background"
                    android:padding="10dp"
                    android:src="@drawable/ic_itemtype_unknown" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@color/menu_icon_background"
                    android:padding="10dp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>