<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_background"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/userItemIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:paddingLeft="5dp"
        android:layout_marginLeft="5dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:src="@drawable/ic_menu_all" />

    <TextView
        android:id="@+id/userItemTitle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="@color/home_item_text"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userItemValue"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:textColor="@color/blue_color"
        android:text="TextView" />

</LinearLayout>